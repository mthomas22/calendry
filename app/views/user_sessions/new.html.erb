<h1>Login</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br />
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %>
  <br />
  <%= f.submit "Login and start using calendry" %>
  <br /><br />
  Don't have an account? <%= link_to "Create one now", new_user_path %>
<% end %>